@model PieWorkShop.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<br>
<h2>Edit Student</h2>

@*View -> Controller -> (Model)Repository -> AppDbContext -> DataBase*@

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateStudent" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentID" />

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>     
            <br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div class="nav justify-content-end">
   
    <li class="nav-item">
        @if ( Model.TeamName == "A")
        {
            <a class="nav-link" asp-controller="Student" asp-action="ListA">Root</a>
        }
        @if (Model.TeamName == "B")
        {
            <a class="nav-link" asp-controller="Student" asp-action="ListB">Root</a>
        }
        @if (Model.TeamName == "C")
        {
            <a class="nav-link" asp-controller="Student" asp-action="ListC">Root</a>
        }
        @if (Model.TeamName == "D")
        {
            <a class="nav-link" asp-controller="Student" asp-action="ListD">Root</a>
        }    
    </li>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
