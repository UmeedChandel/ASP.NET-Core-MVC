@using PieWorkShop.ViewModels
@model CustomClass

@*Partial View avoid repeatable code
Inside Shared folder as _FileName.cshtml*@

<html>
    <head>
        <p>
            Total Student(s): @Model.count
            <p><a asp-controller="Student" asp-action="Create">Create</a></p>

        </p>
    </head>
    <body>
        <table class="table table-striped table-dark">
          <thead>
            <tr>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Age</th>
              <th scope="col">Gender</th>
              <th scope="col">Team</th>
              <th scope="col">Action</th>
             
            </tr>
          </thead>
            <tbody>
            @foreach(var student in Model.students)
            {
                <tr>
                    <td><a asp-controller="Student" asp-action="Details" asp-route-id1="@student.StudentID">@student.FirstName</a></td>
                    <td>@student.LastName</td>
                    <td>@student.Age </td>
                    <td>@student.Gender</td>
                    <td>@student.TeamName </td>
                    <td><a asp-controller="Student" asp-action="Remove" asp-route-id3="@student.StudentID">Remove</a></td>
                </tr>                  

            }  
            </tbody>
        </table>       
    </body>
</html>
